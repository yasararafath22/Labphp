Mark.php
<?php
$a=$_POST['name'];
$b=$_POST['rno'];
$m1=$_POST['m1'];
$m2=$_POST['m2'];
$m3=$_POST['m3'];
$m4=$_POST['m4'];
$total=($m1+$m2+$m3+$m4);
$per=($total/5);
$res=($m1>=40&&$m2>=40&&$m3>=40&&$m4>=40)?"PASS":"FAIL"
;
echo"<table align=center border=2>
<tr><td><font color=red>NAME</font></td>
<td>$a</td>
</tr>
<tr><td><font color=red>REGISTER NUMBER</font></td>
<td>$b</td>
</tr>
